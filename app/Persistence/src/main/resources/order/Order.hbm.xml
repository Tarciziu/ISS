<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
        <class name="model.OrderDTO"
               table="order_table">
                <id name="id" column="id">
                        <generator class="increment"/>
                </id>
                <property
                        name="quantity"
                        column="quantity"/>
                <property
                        name="buyer"
                        column="buyer"/>
                <property
                        name="product_id"
                        column="product_id"
                />
        </class>
</hibernate-mapping>